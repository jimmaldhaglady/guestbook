<script src="../../dist/js/bootstrap.min.js"></script>
 <script>
   $(document).ready(function(){
                    $("#submit").click(function(){
                        $.ajax({
                            url: '/create', // The URL to the API. You can get this by clicking on "Show CURL example" from an API profile
