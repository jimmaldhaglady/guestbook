<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>{% block title %}Guestbook{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    {%  block stylesheets %}{% endblock %}
    <!-- Custom styles for this template -->
    <link href="starter-template.css" rel="stylesheet">
</head>

<body>



<div class=""form_group">
        <form class="form-inline my-2 my-lg-0">
                 <h2 class=""page_header">Guestbook</h2>
                <form method="post">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control mr-sm-2" id="name" placeholder="Enter Name" name="name">
                    </div>

                    <div class="form-group">
                        <label for="name">Address:</label>
                        <input type="text" class="form-control mr-sm-2" id="address" placeholder="Enter Address" name="address">
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control mr-sm-2" id="email" placeholder="Enter email" name="email">
                    </div>

                    <div class="form-group">
                        <label for="message">Message:</label>
                        <input type="textarea" class="form-control mr-sm-2" id="message" placeholder="Enter Message" name="message">
                    </div>

                    <div class="g-recaptcha">
                        <label for="captcha">Captcha:</label>
                        <input type="captcha" class="form-control mr-sm-2" id="captcha" placeholder="Captcha" name="captcha">
                    </div>

                    <button type="button" class="btn btn-outline-success my-2 my-sm-0" id="submit">Submit</button>
                </form>
    </div>


<!-- Bootstrap core JavaScript
================================================== -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
